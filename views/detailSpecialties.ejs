<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/css/bootstrap.min.css"
    integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">

  <title>Patient Management - Details</title>

  <style>
    body {
      background-color: #e4e4e4;
    }

    .btn {
      border-width: 2px;
      margin-right: 5px;
    }

    .greeting-text {
      font-size: 24px;
      font-weight: bold;
      color: white;
    }

    .patient-row {
      position: relative;
    }

    .patient-actions {
      position: absolute;
      right: 0;
      top: 50%;
      transform: translateY(-50%);
    }

    .table {
      background-color: #e4e4e4;
    }

    .table-container {
      max-height: 400px;
      overflow-y: auto;
    }

    /* Style for the navigation menu */
    .navbar {
      background: linear-gradient(to right, #343a40, #6c757d); /* Dark gradient background */
      margin-bottom: 20px; /* Add margin for separation */
    }

    .navbar-dark .navbar-nav .nav-link {
      color: #ffffff; /* Set text color to white */
    }

    .navbar-dark .navbar-toggler-icon {
      background-color: #ffffff; /* Set toggler color to white */
    }

    /* Style for the welcome header */
    .welcome-header {
      background: linear-gradient(to right, #343a40, #6c757d); /* Dark gradient background */
      color: white;
      text-align: start;
      padding: 20px;
      font-size: 24px;
      font-weight: bold;
    }
  </style>
</head>

<body>

  <!-- Welcome Header -->
  <div class="welcome-header">
    Welcome Admin
  </div>

  <!-- Navigation menu -->
  <nav class="navbar navbar-expand-md navbar-dark">
    <a class="navbar-brand" href="#">Patient Management</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav"
      aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNav">
      <ul class="navbar-nav">
        <li class="nav-item active">
          <a class="nav-link" href="/api/appointments/">Appointments</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/api/patients/">Patients</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/api/doctors/">Doctors</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href="/api/specialties/">Specialties</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/api/reviews/">Reviews</a>
          </li>
      </ul>
    </div>
  </nav>


  <div class="container">
    <div class="table-container">
    <table class="table table-striped table-hover">
      <thead>
        <tr>
          <th scope="col">ID</th>
          <th scope="col">Specialty</th>
          <th scope="col">Actions</th>
        </tr>
      </thead>
      <tbody>
        <% specialties.forEach(specialty=> { %>
          <tr class="patient-row">
            <td>
              <%= specialty.id %>
            </td>
            <td>
              <%= specialty.name %>
            </td>
            <td class="patient-actions">
              <a href="/api/specialties/updatePatient/<%= specialty.id %>"
                class="btn btn-outline-warning btn-action">Update</a>
              <a href="/api/specialties/deleteSpecialty/<%= specialty.id %>"
                class="btn btn-outline-danger btn-action">Delete</a>
            </td>
          </tr>
          <% }) %>
      </tbody>
    </table>
    </div>
    <!-- Create button on top right -->
    <a href="/api/patients/signup" class="btn btn-outline-success btn-create-patient">Create</a>
  </div>

  <%- include('partials/footer') %>
</body>

</html>