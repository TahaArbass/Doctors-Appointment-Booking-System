<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <!-- Link to Bootstrap CSS from a CDN -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">

    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Open+Sans">

    <title>Create Appointments</title>
    <!-- Internal styles for the document -->
    <style>
        /* Styling for the 'section' element */
        section {
            padding: 60px 0;
        }

        /* Body background color */
        body {
            background-color: #e4e4e4;
            background-image: url('/assets/myBg.jpg');
            background-size: cover;
            font-family: 'American Typewriter', serif;
        }

        /* Styling for the card */
        .card {
            max-width: 400px; /* Adjust the max-width as needed */
            margin: auto;
            margin-top: 5%;
            background-color: rgba(255, 255, 255, 0.9);
            border-radius: 15px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        /* Styling for the form */
        form {
            padding: 20px;
            margin: auto;
        }

        .center-btn {
            text-align: center;
            margin-top: 20px;
        }

        /* Styling for the responsive image */
        .responsive-img {
            max-width: 100%;
            height: auto;
            margin-top: 20px;
        }
    </style>

</head>

<body>
    <%- include('partials/header') %>

    <div class="container mt-5">
        <div class="row justify-content-center align-items-center">
            <div class="col-lg-9 col-md-8">
                <div class="card">
                    <div class="card-body">
                        <h1 class="text-center mb-4">Create New Appointment</h1>

                        <form method="post" action="/api/appointments/drCreate">
                            <!-- Doctor ID (hidden) -->
                            <div class="form-group">
                                <input type="hidden" class="form-control" id="doctor_id" name="doctor_id"
                                    value="<%= doctor_id %>" readonly>
                            </div>

                            <!-- Patient ID -->
                            <div class="form-group">
                                <label for="patient_id">Patient ID:</label>
                                <input type="text" class="form-control" id="patient_id" name="patient_id" required>
                            </div>

                            <!-- Appointment Datetime -->
                            <div class="form-group">
                                <label for="appointment_datetime">Appointment Datetime:</label>
                                <input type="datetime-local" class="form-control" id="appointment_datetime"
                                    name="appointment_datetime" required>
                            </div>

                            <!-- Status -->
                            <div class="form-group">
                                <label for="status">Status:</label>
                                <select class="form-control" id="status" name="status" required>
                                    <option value="pending">Pending</option>
                                    <option value="scheduled">Scheduled</option>
                                    <option value="canceled">Canceled</option>
                                    <option value="completed">Completed</option>
                                </select>
                            </div>

                            <!-- Reason -->
                            <div class="form-group">
                                <label for="reason">Reason:</label>
                                <textarea class="form-control" id="reason" name="reason"></textarea>
                            </div>

                            <button type="submit" class="btn btn-primary btn-block">Submit</button>
                        </form>
                    </div>
                </div>
                <!-- image -->
            </div>
            <div class="col-lg-3 col-md-4">
                <img src="/assets/happy-patient.png" alt="Responsive Image" class="img-fluid responsive-img">
            </div>
        </div>
    </div>

    <%- include('partials/footer') %>

</body>

</html>
