<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <link href="/css/style.css" rel="stylesheet" type="text/css" />
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/css/bootstrap.min.css"
    integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">

  <title>Patient Management - Details</title>

  <style>
    /* Custom style for the buttons */
    .btn-action {
      margin-right: 5px;
    }

    /* Style for the greeting text */
    .greeting-text {
      font-size: 24px;
      font-weight: bold;
      color: white;
    }

    /* Style for patient rows with action buttons */
    .patient-row {
      position: relative;
    }

    .patient-actions {
      position: absolute;
      right: 0;
    }
  </style>
</head>

<body>
  
  <% include('partials/header') %>
  <% include('partials/menu') %>

    <table class="table table-light table-striped table-hover">
      <thead>
        <tr>
          <th scope="col">ID</th>
          <th scope="col">First Name</th>
          <th scope="col">Last Name</th>
          <th scope="col">Email</th>
          <th scope="col">Phone Number</th>
          <th scope="col">Date of Birth</th>
          <th scope="col">Address ID</th>
          <th scope="col">Actions</th>
        </tr>
      </thead>
      <tbody>
        <% patients.forEach(patient=> { %>
          <tr class="patient-row">
            <td><%= patient.id %></td>
            <td><%= patient.first_name %></td>
            <td><%= patient.last_name %></td>
            <td><%= patient.email %></td>
            <td><%= patient.phone_number %></td>
            <td><%= patient.date_of_birth %></td>
            <td><%= patient.address_id %></td>
            <td class="patient-actions">
              <a href="/api/patients/updatePatient/<%= patient.id %>" class="btn btn-warning btn-action">Update</a>
              <a href="/api/patients/deletePatient/<%= patient.id %>" class="btn btn-danger btn-action">Delete</a>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>

    <!-- Create button on top right -->
    <a href="/api/patients/signup" class="btn btn-success btn-create-patient">Create</a>
  </div>

  <% include('partials/footer') %>
</body>

</html>
